{
  "name": "whatsapp-desktop",
  "version": "0.3.12",
  "repository": "https://github.com/Enrico204/Whatsapp-Desktop.git",
  "description": "Unofficial WhatsApp Desktop Client. Build with Electron.",
  "main": "main.js",
  "scripts": {
    "dev": "electron --debug=5858 ./app",
    "gettext": "xgettext app/*.js -j --omit-header -o app/locale/messages.pot && xgettext app/html/*.html -L JavaScript -j --omit-header -o app/locale/messages.pot",
    "clean": "node clean.js",
    "rebuild": "cd app/ && ./node_modules/.bin/electron-rebuild -f && cd ..",
    "build:win": "npm run rebuild && electron-packager ./app \"WhatsApp\" --out=dist --platform=win32 --arch=x64 --version=1.4.3 --icon=assets/win/whatsapp.ico",
    "build:osx": "npm run rebuild && electron-packager ./app \"WhatsApp\" --out=dist --platform=darwin --arch=x64 --version=1.4.3 --icon=assets/osx/whatsapp.icns",
    "build:linux": "npm run rebuild && electron-packager ./app \"WhatsApp\" --out=dist --platform=linux --arch=x64 --version=1.4.3 --icon=assets/win/whatsapp.ico",
    "build:linuxarmv7l": "npm run rebuild && electron-packager ./app \"WhatsApp\" --out=dist --platform=linux --arch=armv7l --version=1.4.3 --icon=assets/win/whatsapp.ico"
  },
  "devDependencies": {
    "electron-packager": "^8.5.0",
    "electron": "^1.4.14"
  },
  "dependencies": {
    "process-nextick-args": "^1.0.7",
    "util-deprecate": "^1.0.2"
  }
}
